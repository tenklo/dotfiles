set previewer ~/.config/lf/preview
set icons
set relativenumber on
set hiddenfiles ".*:snap:StudioProjects:Guild Wars:lost+found"

# commands
cmd open ${{
    o "$f"
}}

cmd mkdir push %mkdir<space>-p<space>

cmd mkfile push %touch<space>

cmd aunpack ${{
    aunpack "$f"
}}

cmd guifilemanager ${{
    pcmanfm "$PWD"
}}

cmd setwallpaper ${{
    setbg "$f"
}}

cmd chmod ${{
  printf "Mode Bits: "
  read ans

  for file in "$fx"
  do
    chmod $ans $file
  done

  lf -remote 'send reload'
}}

cmd openterminalhere ${{
    openterminalat "$PWD"
}}

cmd listshortcuts ${{
    less ~/.local/share/data/shortcuts
}}

# unmaps
map m
map y
map d
map e
map gld
map c

# mappings
map D delete
map yy copy
map dd cut
map cc reload
map o open
map ee $$EDITOR "$f"
map es $sudo $EDITOR "$f"
map SD $sudo rm "$f"

map . set hidden!
map md mkdir
map mf mkfile

map br $printf "%s\n" "$fx" | vidir -
map <c-t> openterminalhere

map ch chmod

map @ push $<space>"$f"<left><left><left><left><left>

map x aunpack "$f"

map O guifilemanager

# shortcuts
map H listshortcuts
source "~/.config/lf/shortcuts.conf"
