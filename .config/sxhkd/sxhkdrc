# audiothings on the thinkpad x220
#XF86AudioRaiseVolume
    #amixer set Master 2db+ unmute
#XF86AudioLowerVolume
    #amixer set Master 2dB- unmute
XF86AudioMute
    amixer set Speaker toggle
    #amixer sset Master 1+ toggle #& amixer -c1 sset Speaker unmute
XF86MonBrightnessDown
    brightnessctl set 5%-
XF86MonBrightnessUp
    brightnessctl set +5%


# basic bindings
super + Return
    $TERMINAL
super + p
    dmenu_run $DMENUOPTIONS -l 20

super + b
    bookmarks

super + o ; {a,b,f,n,p,w,s,t,z,d,c,r,v,1,2}
    {authy,$BROWSER,openranger,$BROWSER --private-window,bitwarden,win10,sshconnections,tor-browser,zoom,dailystandups,opencalc,opennewsboat,openvimwiki,berichtshefte,anki}

super + F1
    clipmenu $DMENUOPTIONS
super + F2
    dmenu-emoji.sh

super + F5
    editconfigs
super + F6
    editscripts

super + F10
    {takescreenshot}
super + F11
    devicectrl
super + F12 ; {F9,F10,F11,F12}
    {lock,togglelocker,setbg,systemmodes}
