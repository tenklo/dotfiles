# audiothings on the thinkpad x220
#XF86AudioRaiseVolume
    #amixer set Master 2db+ unmute
#XF86AudioLowerVolume
    #amixer set Master 2dB- unmute
#F1
XF86AudioMute
	pactl set-sink-mute 0 toggle
	#amixer set Speaker toggle
    #amixer sset Master 1+ toggle #& amixer -c1 sset Speaker unmute
XF86MonBrightnessDown
    brightnessctl set 5%-
XF86MonBrightnessUp
    brightnessctl set +5%


# basic bindings
super + Return
    $TERMINAL
super + p
    dmenu_run_i -l 20

super + b
    o "$(bookmarks)"

super + shift + b
    bookmarks | xsel -ib

super + o ; {a,b,f,m,p,w,t,z,c,v,x,1,2}
    {authy,openguibrowser,openfilemanager,startthunderbird,keepassxc,win10,tor-browser,zoom,opencalc,openvimwiki,$TERMINAL --hold -e xprop,berichtshefte,anki}

super + c ; {b,d,f,m,r,s,v}
    {openclbrowser,dailystandups,openranger,openneomutt,opennewsboat,sshconnections,openvimwiki}

super + s
	o "$(searchweb)"

super + shift + s
	o "$(searchweb $(xsel -o))"

super + F1
    clipmenu
super + F2
    dmenu-emoji.sh
super + y ; {p,s,n}
	{ctrldeadbeef prev,ctrldeadbeef play,ctrldeadbeef next}

super + F5
    o "$(editconfigs)"
super + F6
    o "$(editscripts)"

super + F10 ; {t,s}
    {takescreenshot,takescreenshot sel}
super + F11
    devicectrl
super + F12 ; {l,o,r,s,t,F11,F12}
    {lock,opacity toggle,restartsxhkd,lock && systemctl suspend,togglelocker,setbg,systemmodes}
