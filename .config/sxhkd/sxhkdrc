# audiothings on the thinkpad x220
XF86AudioRaiseVolume
    amixer -c1 set Master 2db+ unmute
XF86AudioLowerVolume
    amixer -c1 set Master 2dB- unmute
XF86AudioMute
    amixer -c1 sset Master 1+ toggle & amixer -c1 sset Speaker unmute

# basic bindings
super + Return
    $TERMINAL
super + d
    dmenu_run
super + b
    $BROWSER
super + shift + q
	kill -9 `xdotool getwindowfocus getwindowpid`

super + o ; {b,m,p,l}
    {$BROWSER,thunderbird,bitwarden,lbry}
super + F11
    {setbg}
super + F10
    {takescreenshot}
