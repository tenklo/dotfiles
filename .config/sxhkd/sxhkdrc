# audiothings on the thinkpad x220
XF86AudioRaiseVolume
    amixer -c1 set Master 2db+ unmute
XF86AudioLowerVolume
    amixer -c1 set Master 2dB- unmute
XF86AudioMute
    amixer -c1 sset Master 1+ toggle & amixer -c1 sset Speaker unmute

# basic bindings
super + Return
    $TERMINAL
super + d
    dmenu_run
super + b ; {b,m,w,n,p}
    {$BROWSER,protonmail.sh,$BROWSER https://wiki.kloess.me,$BROWSER http://192.168.22.39/nextcloud,$BROWSER http://192.168.22.39/admin}
super + shift + q
	kill -9 `xdotool getwindowfocus getwindowpid`

super + o ; {b,p,l}
    {$BROWSER,bitwarden,lbry}
super + F11
    {setbg}
super + F10
    {takescreenshot}


