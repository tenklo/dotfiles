# audiothings on the thinkpad x220
#XF86AudioRaiseVolume
    #amixer set Master 2db+ unmute
#XF86AudioLowerVolume
    #amixer set Master 2dB- unmute
#F1
XF86AudioMute
	pactl set-sink-mute 0 toggle
	#amixer set Speaker toggle
    #amixer sset Master 1+ toggle #& amixer -c1 sset Speaker unmute
XF86MonBrightnessDown
    brightnessctl set 5%-
XF86MonBrightnessUp
    brightnessctl set +5%


# basic bindings
super + Return
    $TERMINAL
super + p
    dmenu_run $DMENUOPTIONS -l 20

super + b
    bookmarks

super + o ; {a,b,n,p,w,t,z,c,v,1,2}
    {authy,$BROWSER,$BROWSER --private-window,bitwarden,win10,tor-browser,zoom,opencalc,openvimwiki,berichtshefte,anki}

super + o ; {d,f,r,s}
    {dailystandups,openranger,opennewsboat,sshconnections}

super + F1
    clipmenu $DMENUOPTIONS
super + F2
    dmenu-emoji.sh

super + F5
    editconfigs
super + F6
    editscripts

# super + Print
super + F10
    {takescreenshot}
super + F11
    devicectrl
super + F12 ; {l,s,t,F11,F12}
    {lock,$locker && systemctl suspend,togglelocker,setbg,systemmodes}

