# audiothings on the thinkpad x220
#XF86AudioRaiseVolume
    #amixer set Master 2db+ unmute
#XF86AudioLowerVolume
    #amixer set Master 2dB- unmute
#F1
XF86AudioMute
	pactl set-sink-mute 0 toggle
	#amixer set Speaker toggle
    #amixer sset Master 1+ toggle #& amixer -c1 sset Speaker unmute
XF86MonBrightnessDown
    brightnessctl set 5%-
XF86MonBrightnessUp
    brightnessctl set +5%


# basic bindings
super + Return
    $TERMINAL
super + p
    dmenu_run_i $DMENUOPTIONS -l 20

super + b
    bookmarks

super + shift + b
    bookmarks cp

super + o ; {a,b,f,n,p,w,t,z,c,v,x,1,2}
    {authy,$BROWSER,openfilemanager,$BROWSER --private-window,keepassxc,win10,tor-browser,zoom,opencalc,openvimwiki,$TERMINAL --hold -e xprop,berichtshefte,anki}

super + c ; {b,d,f,r,s,v}
    {openw3m,dailystandups,openranger,opennewsboat,sshconnections,openvimwiki}

super + s
	searchweb

super + shift + s
	searchweb --sel

super + F1
    clipmenu $DMENUOPTIONS
super + F2
    dmenu-emoji.sh
super + y ; {p,s,n}
	{ctrldeadbeef prev,ctrldeadbeef play,ctrldeadbeef next}

super + F5
    editconfigs
super + F6
    editscripts

super + F10 ; {t,s}
    {takescreenshot,takescreenshot sel}
super + F11
    devicectrl
super + F12 ; {l,o,s,t,F11,F12}
    {lock,opacity toggle,lock && systemctl suspend,togglelocker,setbg,systemmodes}
