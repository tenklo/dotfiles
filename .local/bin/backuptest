#!/bin/sh

backuppath="root@homepi:/home/storage/share/backups/$(hostname)"
pathtobackup="/home/"
excludes='"karsten/Nextcloud/*","karsten/nextcloud_work/*","karsten/documents/virtualization/*","karsten/.ssh/*"'

DAY=$(date +%A)

if [ -e /location/to/backup/incr/$DAY ] ; then
  rm -fr /location/to/backup/incr/$DAY
fi

rsync -auP --delete --exclude={"$excludes"} -e ssh "$pathtobackup" "$backuppath/full"

# rsync -ua --delete -vP --inplace --exclude={"$HOME/Nextcloud/*","$HOME/nextcloud_work/*","$HOME/documents/virtualization/*","$HOME/.ssh/*"} --backup --backup-dir="$backuppath/incr/$DAY" "$pathtobackup" "$backuppath/full/"
# rsync -a --delete --quiet --inplace --backup --backup-dir="$backuppath"/incr/$DAY "$pathtobackup" "$backuppath"/full/
